@model MvcRome.Models.ClusterAccount

@{
    ViewBag.Title = "Create";
}

<h2>Cluster Account</h2>
<link href="@Url.Content("~/Content/site.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-1.8.2.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui-1.8.24.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(function () {
        $("#tabs").tabs();
    });
</script>
@using (Html.BeginForm("Create", "ClusterAccount",
            new { ReturnUrl = ViewBag.ReturnUrl },
            FormMethod.Post, new { @class = "bootstrap-frm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    

           <table>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.AccountCodes)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.AccountCodes)
                    </td>
                    <td>
                        @Html.ValidationMessageFor(model => model.AccountCodes)
                    </td>
                </tr>
               <tr>
                   <td>
                        @Html.LabelFor(model => model.description)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.description)
                    </td>
                    <td>
                        @Html.ValidationMessageFor(model => model.description)
                    </td>
               </tr>
               <tr>
                   <td>
                        @Html.LabelFor(model => model.shortDescription)
                    </td>
                    <td>
                        @Html.EditorFor(model => model.shortDescription)
                    </td>
                    <td>
                        @Html.ValidationMessageFor(model => model.shortDescription)
                    </td>
               </tr>
         </table>
        <br />

    
    
        <div id="tabs" style="height:350px;width:700px;">
            <!--background: none repeat scroll 0% 0% rgb(204, 204, 204);" -->
            <ul>
                <li><a href="#tabs-1">ADP Export</a></li>
                <li><a href="#tabs-2">UCS Export</a></li>
                <li><a href="#tabs-3">ACS Export</a></li>

            </ul>
            <div id="tabs-1">
                <fieldset style="width: 500px; height: auto;font-size:small">
            <legend>ADP Sale/Vehicle Inventory Statistical Count</legend><br />
            <div>

                @Html.RadioButtonFor(model => model.ADPSaleVehicleInventory, "NoCount", new { @checked = "checked",  @style = "width:auto;background:none;border:none" })No Count<br />
                @Html.RadioButtonFor(model => model.ADPSaleVehicleInventory, "MCRO", new {  @style = "width:auto;background:none;border:none" })Multipe Count in RO<br />
                @Html.RadioButtonFor(model => model.ADPSaleVehicleInventory, "CSRO", new {  @style = "width:auto;background:none;border:none" })Count 1 Sale per RO<br />
                @Html.RadioButtonFor(model => model.ADPSaleVehicleInventory, "CIRO", new {  @style = "width:auto;background:none;border:none" })Count 1 Inventory per RO<br />
                @Html.RadioButtonFor(model => model.ADPSaleVehicleInventory, "CSOIRO", new { @style = "width:auto;background:none;border:none" })Count 1 Sale OR Inventory per RO<br />
                @Html.RadioButtonFor(model => model.ADPSaleVehicleInventory, "CSAIRO", new { @style = "width:auto;background:none;border:none" })Count 1 Sale AND Inventory per RO<br />

                @Html.ValidationMessageFor(model => model.ADPSaleVehicleInventory)
            </div>
        </fieldset>
            </div>
            <div id="tabs-2">
                <fieldset style="width:500px;height:auto;font-size:small">
                    <legend>Quick Books</legend>
                    <table>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.UCSUnitCode)
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.UCSUnitCode,new { style="width:150px" })
                            </td>
                            <td>
                                @Html.ValidationMessageFor(model => model.UCSUnitCode)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.UCSUnitCount)
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.UCSUnitCount,new { style="width:150px" })
                            </td>
                            <td>
                                @Html.ValidationMessageFor(model => model.UCSUnitCount)
                            </td>
                        </tr>
                    </table>
                </fieldset>
            </div>
            <div id="tabs-3">
                
                    <div style="vertical-align:bottom">

                        @Html.CheckBoxFor(model => model.StatisticalCount)
                        @Html.LabelFor(model => model.StatisticalCount)
                    </div>

                
            </div>

        </div>


        <p>
            <input type="submit" value="Create" />
        </p>
    
}